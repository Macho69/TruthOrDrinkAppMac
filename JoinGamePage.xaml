<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkAppMac.JoinGamePage"
             Title="Deelnemen aan Sessie"
             BackgroundColor="Black">
    <VerticalStackLayout Padding="20">
        <Label Text="Deelnemen aan Sessie" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10" />

        <!-- Invoerveld voor sessiecode -->
        <Label Text="Voer de sessiecode in:" TextColor="White" FontSize="18" Margin="0,20" />
        <Entry x:Name="SessionCodeEntry" Placeholder="Sessiecode" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" />

        <!-- QR-code scannen -->
        <Label Text="Scan een QR-code:" TextColor="White" FontSize="18" Margin="0,20" />
        <Button Text="QR-code scannen" BackgroundColor="Gray" TextColor="White" Clicked="OnScanQRCodeClicked" />


        <!-- Doorgaan knop -->
        <Button Text="Deelnemen" BackgroundColor="Green" TextColor="White" Margin="20" HorizontalOptions="FillAndExpand"
                Clicked="OnJoinGameClicked" />

        <!-- Annuleren knop -->
        <Button Text="Annuleren" BackgroundColor="Red" TextColor="White" HorizontalOptions="FillAndExpand"
                Clicked="OnCancelButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
