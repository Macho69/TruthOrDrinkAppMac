<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkAppMac.LoginPage"
             Title="">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username/Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginButtonClicked" />
        <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False" />

        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20" />

        <Button Text="No account? Register here!" Clicked="OnCreateUserClicked"  FontSize="14" HorizontalOptions="Center"  />
    </VerticalStackLayout>
</ContentPage>
