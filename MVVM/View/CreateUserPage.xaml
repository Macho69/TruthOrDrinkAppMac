<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkAppMac.MVVM.View.CreateUserPage"
             Title="CreateUserPage"
             BackgroundColor="Black">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" TextColor="White" />
        <Entry x:Name="RegisterEmailEntry" Placeholder="Email" Keyboard="Email" BackgroundColor="White" TextColor="Black" />
        <Entry x:Name="RegisterUsernameEntry" Placeholder="Username" BackgroundColor="White" TextColor="Black" />
        <Entry x:Name="RegisterPasswordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="White" TextColor="Black" />
        <Button Text="Register" Clicked="OnRegisterButtonClicked" TextColor="Black" BackgroundColor="White" />

        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20" />
    </VerticalStackLayout>
</ContentPage>
