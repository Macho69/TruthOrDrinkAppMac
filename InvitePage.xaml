<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkAppMac.InvitePage"
             Title="Uitnodigen"
             BackgroundColor="Black">
    <VerticalStackLayout Padding="20">
        <Label Text="Deelnemen aan sessie" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10" />

        <!-- QR-code -->
        <Image x:Name="QRCodeImage" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" Margin="0,20" />

        <!-- Willekeurige sessiecode -->
        <Label x:Name="SessionCodeLabel" Text="Sessiecode: 123456" TextColor="White" FontSize="18" HorizontalOptions="Center" />

        <!-- Annuleren knop -->
        <Button Text="Annuleren" BackgroundColor="Gray" TextColor="White" Margin="20" HorizontalOptions="FillAndExpand"
                Clicked="OnCancelButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
